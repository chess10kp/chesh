{
	"name": "lichess-tui",
	"version": "1.0.0",
	"description": "Terminal User Interface (TUI) application for viewing live chess games from Lichess broadcasts",
	"license": "MIT",
	"bin": "dist/index.js",
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"dev": "bun run src/index.tsx",
		"build": "bun build ./src/index.tsx --outdir ./dist --target bun",
		"type-check": "tsc --noEmit"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@lichess-org/types": "latest",
		"@mliebelt/pgn-parser": "^1.4.19",
		"ink": "^6.6.0",
		"react": "^19.2.3",
		"react-devtools-core": "^7.0.1"
	},
	"devDependencies": {
		"@types/react": "^19.2.3",
		"typescript": "^5.0.3"
	}
}
