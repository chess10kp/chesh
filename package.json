{
	"name": "chesh",
	"version": "0.0.1",
	"description": "TUI for viewing live chess games from Lichess broadcasts",
	"license": "MIT",
  "bin":  {
    "chesh": "dist/index.js"
  },
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"dev": "bun run src/index.tsx",
		"build": "bun build ./src/index.tsx --outdir ./dist --target bun",
		"type-check": "tsc --noEmit"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@lichess-org/types": "latest",
		"@mliebelt/pgn-parser": "^1.4.19",
		"chess.js": "^1.4.0",
		"ink": "^6.6.0",
		"react": "^19.2.3",
		"react-devtools-core": "^7.0.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/react": "^19.2.3",
		"typescript": "^5.0.3"
	}
}
